---
import { getCollection } from "astro:content";
import BaseLayout from "@/layouts/BaseLayout.astro";

const allPosts = await getCollection("posts");

// Sort posts by date in descending order (newest first)
const sortedPosts = allPosts.sort(
  (a, b) => new Date(b.data.pubDate) - new Date(a.data.pubDate)
);
---

<BaseLayout title="One-Way Taxi Services in Rajasthan">


    
  

  <section>
    <div class="px-8 py-12 md:px-12 mx-auto lg:pb-24 lg:px-32 lg:pt-2 relative flex flex-col items-center md:flex-row px-6 py-12 md:px-12 mx-auto lg:pb-24 max-w-7xl lg:px-32">
      <div class="flex items-center py-5 md:w-1/2 md:pb-20 md:pt-10 md:pr-10">
        <div class="text-left">
          <h2 class="text-4xl font-extrabold leading-10 tracking-tight text-black sm:text-5xl sm:leading-none md:text-6xl">
            Reliable <span class="font-bold text-black">One-Way Taxi</span> Services 
            <span class="text-xl font-semibold rounded-full text-black">by NRtours</span>
          </h2>
          <p class="max-w-md mx-auto mt-3 text-base text-black sm:text-lg md:mt-5 md:text-xl md:max-w-3xl">
            Enjoy hassle-free and comfortable travel across Rajasthan with New Rajasthan Tours. Our one-way taxi service is designed for your convenience and safety.
          </p>
          <div class="mt-5 sm:flex md:mt-8">
            <div class="rounded-md shadow">
              <a href="tel:917976592083" class="flex items-center justify-center w-full px-8 py-3 text-base font-medium leading-6 text-white transition duration-150 ease-in-out bg-black border border-transparent rounded-md hover:bg-gray-800 focus:outline-none focus:shadow-outline md:py-4 md:text-lg md:px-10">
                Call Now
              </a>
            </div>
            <div class="mt-3 rounded-md shadow sm:mt-0 sm:ml-3">
              <a href="https://wa.me/917976592083?text=Hello%20I%20need%20a%20one-way%20taxi" target="_blank" class="flex items-center justify-center w-full px-8 py-3 text-base font-medium leading-6 text-black transition duration-150 ease-in-out bg-white border border-black rounded-md hover:bg-gray-200 focus:outline-none focus:shadow-outline md:py-4 md:text-lg md:px-10">
                WhatsApp
              </a>
            </div>
          </div>
        </div>
      </div>
      <div class="flex items-center py-5 md:w-1/2 md:pb-20 md:pt-10 md:pl-10">
        <div class="relative w-full p-3 rounded shadow-lg md:p-8">
          <div class="rounded-lg bg-white text-black w-full">
            <img src="https://images.pexels.com/photos/3593923/pexels-photo-3593923.jpeg?auto=compress&cs=tinysrgb&w=600" alt="One-Way Taxi Service by New Rajasthan Tours" width="400" height="300" class="w-[400px] h-[300px] object-cover rounded" />
          </div>
        </div>
      </div>
    </div>
  </section>

  <section>
    <div class="px-6 py-12 md:px-12 mx-auto lg:pb-24 max-w-7xl lg:px-32">
      <div class="relative bg-black p-10 lg:p-20 rounded-lg shadow-lg">
      <h2 class="text-center text-3xl lg:text-5xl font-semibold font-display text-white leading-snug">
        Choose Your Destination
      </h2>
      <form x-data="{ destination: '' }" class="mt-8">
        <div class="flex flex-col sm:flex-row gap-3 max-w-md mx-auto">
        <select 
          x-model="destination" 
          class="block w-full rounded-lg border border-zinc-700 px-4 py-3 font-spline text-sm font-medium text-white bg-zinc-900 focus:border-zinc-600 focus:outline-none focus:ring-2 focus:ring-zinc-600/50 disabled:opacity-50"
          required
        >
          <option value="" disabled selected>Select Destination</option>
          <option value="Jaipur">Jaipur</option>
          <option value="Udaipur">Udaipur</option>
          <option value="Jodhpur">Jodhpur</option>
          <option value="Kota">Kota</option>
          <option value="Bikaner">Bikaner</option>
        </select>
        <a 
          :href="'https://wa.me/917976592083?text=Hello%2C%20I%20need%20a%20one-way%20taxi%20to%20' + encodeURIComponent(destination)" 
          target="_blank"
          class="inline-flex items-center justify-center w-full sm:w-auto px-5 py-3 rounded-lg text-sm font-medium transition-all duration-300 bg-white text-black border border-transparent focus:ring-2 focus:ring-black hover:bg-white/10 hover:text-white disabled:opacity-50 disabled:pointer-events-none"
          :class="{ 'pointer-events-none opacity': !destination }"
        >
          <span>Book Now</span>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" class="ml-2 w-4">
          <path fill-rule="evenodd" d="M3 10a.75.75 0 01.75-.75h10.638L10.23 5.29a.75.75 0 111.04-1.08l5.5 5.25a.75.75 0 010 1.08l-5.5 5.25a.75.75 0 11-1.04-1.08l4.158-3.96H3.75A.75.75 0 013 10z" clip-rule="evenodd"></path>
          </svg>
        </a>
        </div>
      </form>
      </div>
    </div>
  </section>

</BaseLayout>
