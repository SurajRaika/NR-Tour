---
import BaseLayout from '../layouts/BaseLayout.astro'
---

<BaseLayout>
  <section>
    <div class="px-6 py-12 md:px-12 mx-auto lg:pb-24 max-w-7xl lg:px-32">
      <div class="relative bg-black p-10 lg:p-20 rounded-lg shadow-lg">
        <h2 class="text-center text-3xl lg:text-5xl font-semibold font-display text-white leading-snug">
          Book Your Taxi Service
        </h2>
        <form x-data="{ service: '', pickup: '', destination: '' }" class="mt-8">
          <div class="flex flex-col gap-4 max-w-md mx-auto">
            <!-- Service Type Dropdown -->
            <select 
              x-model="service"
              class="block w-full rounded-lg border border-zinc-700 px-4 py-3 text-sm font-medium text-white bg-zinc-900 focus:border-zinc-600 focus:outline-none focus:ring-2 focus:ring-zinc-600/50"
              required
            >
              <option value="" disabled selected>Select Service Type</option>
              <option value="Trip">Trip</option>
              <option value="Airport Transfer">Airport Transfer</option>
              <option value="Emergency">Emergency</option>
              <option value="One Way">One Way</option>
              <option value="Tour">Tour</option>
            </select>
            
            <!-- Pickup Location Dropdown -->
            <select 
              x-model="pickup"
              class="block w-full rounded-lg border border-zinc-700 px-4 py-3 text-sm font-medium text-white bg-zinc-900 focus:border-zinc-600 focus:outline-none focus:ring-2 focus:ring-zinc-600/50"
              required
            >
              <option value="" disabled selected>Select Pickup Location</option>
              <option value="Jaipur">Jaipur</option>
              <option value="Udaipur">Udaipur</option>
              <option value="Jodhpur">Jodhpur</option>
              <option value="Kota">Kota</option>
              <option value="Bikaner">Bikaner</option>
            </select>
            
            <!-- Destination Dropdown -->
            <select 
              x-model="destination"
              class="block w-full rounded-lg border border-zinc-700 px-4 py-3 text-sm font-medium text-white bg-zinc-900 focus:border-zinc-600 focus:outline-none focus:ring-2 focus:ring-zinc-600/50"
              required
            >
              <option value="" disabled selected>Select Destination</option>
              <option value="Jaipur">Jaipur</option>
              <option value="Udaipur">Udaipur</option>
              <option value="Jodhpur">Jodhpur</option>
              <option value="Kota">Kota</option>
              <option value="Bikaner">Bikaner</option>
              <option value="Airport">Airport</option>
              <option value="Other">Other</option>
            </select>
            
            <!-- Book Now Button -->
            <a 
              :href="'https://wa.me/917976592083?text=' + encodeURIComponent('Service: ' + service + '\\nPickup: ' + pickup + '\\nDestination: ' + destination)"
              target="_blank"
              class="inline-flex items-center justify-center w-full px-5 py-3 rounded-lg text-sm font-medium transition-all duration-300 bg-white text-black border border-transparent focus:ring-2 focus:ring-black hover:bg-white/10 hover:text-white disabled:opacity-50 disabled:pointer-events-none"
              :class="{ 'pointer-events-none opacity-50': !service || !pickup || !destination }"
            >
              <span>Book Now</span>
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" class="ml-2 w-4">
                <path fill-rule="evenodd" d="M3 10a.75.75 0 01.75-.75h10.638L10.23 5.29a.75.75 0 111.04-1.08l5.5 5.25a.75.75 0 010 1.08l-5.5 5.25a.75.75 0 11-1.04-1.08l4.158-3.96H3.75A.75.75 0 013 10z" clip-rule="evenodd"></path>
              </svg>
            </a>
          </div>
        </form>
      </div>
    </div>
  </section>
</BaseLayout>
