---
const { title,url, description, location, realCost, discountedCost, image, tags, rating } = Astro.props;
---

<li>
  <a href={url}  title={title} class="group">
    <article class="flex-1 h-full flex flex-col">
      <div class="block w-full lg:col-span-2">
        <img
          class="aspect-[2/3] object-cover bg-center h-full w-full"
          src={image.url}
          alt={image.alt}
        />
      </div>
      <div class="flex flex-col items-start justify-between h-full flex-1 w-full p-4">
        <div>
          <div class="inline-flex space-x-1 items-center">
            <p class="text-xs font-medium text-black">{location}</p>
          </div>
          <p class="text-black mt-2 font-display text-xl text-pretty">{title}</p>
        </div>
        
        <p class="mt-2 text-sm text-zinc-500 line-clamp-2">{description}</p>

        <div class="mt-2 flex space-x-2">
          {tags.map((tag) => (
            <span class="text-xs font-medium text-black bg-zinc-200 px-2 py-1 rounded">{tag}</span>
          ))}
        </div>

        <!-- Star Rating -->
        <div class="mt-3 flex items-center space-x-1">
          {[...Array(5)].map((_, i) => (
            <svg
              key={i}
              class={`w-4 h-4 ${i < rating ? 'text-yellow-500' : 'text-zinc-300'}`}
              fill="currentColor"
              viewBox="0 0 20 20"
            >
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.042 3.21a1 1 0 00.95.69h3.377c.969 0 1.372 1.24.588 1.81l-2.73 1.98a1 1 0 00-.364 1.118l1.042 3.21c.3.921-.755 1.688-1.54 1.118l-2.73-1.98a1 1 0 00-1.176 0l-2.73 1.98c-.785.57-1.84-.197-1.54-1.118l1.042-3.21a1 1 0 00-.364-1.118l-2.73-1.98c-.784-.57-.38-1.81.588-1.81h3.377a1 1 0 00.95-.69l1.042-3.21z"></path>
            </svg>
          ))}
        </div>

        <!-- Price Section -->
        <div class="mt-4 flex items-center space-x-2">
          <p class="text-sm text-zinc-600 line-through">₹{realCost}</p>
          <p class="text-lg font-semibold text-black">₹{discountedCost}</p>
        </div>
      </div>
    </article>
  </a>
</li>
