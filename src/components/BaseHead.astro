---
import "../styles/global.css";
import { AstroSeo } from "@astrolib/seo";

// Props
const {
  title = "NRtours - Best Taxi Service in Rajasthan",
  description = "Book reliable and affordable taxi services across Rajasthan with New Rajasthan Tours (NRtours). Hassle-free rides, anytime, anywhere.",
  tags = ["Taxi Service", "Rajasthan Travel", "NRtours", "One-Way Taxi", "Airport Transfers"]
} = Astro.props;

const formattedTags = Array.isArray(tags) ? tags.join(", ") : tags;
const canonicalUrl = `https://nrtours.com/${title.toLowerCase().replace(/\s+/g, "-")}`;

// Local thumbnail in /public
const ogImage = "/thumbnail.png";
---

<AstroSeo
  title={title}
  description={description}
  canonical={canonicalUrl}
  openGraph={{
    url: canonicalUrl,
    title,
    description,
    images: [
      {
        url: ogImage,
        width: 1200,
        height: 630,
        alt: `${title} - Taxi Service in Rajasthan`,
        type: "image/png",
      },
    ],
    site_name: "NRtours",
    type: "website",
    locale: "en_US",
  }}
  twitter={{
    handle: "@nrtours",
    site: "@nrtours",
    cardType: "summary_large_image",
  }}
/>

<!-- Essential Meta Tags -->
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<meta name="description" content={description} />
<meta name="keywords" content={formattedTags} />
<meta name="author" content="New Rajasthan Tours" />

<!-- Favicons -->
<link rel="icon" type="image/png" href="/favicons/favicon-96x96.png" sizes="96x96" />
<link rel="icon" type="image/svg+xml" href="/favicons/favicon.svg" />
<link rel="shortcut icon" href="/favicons/favicon.ico" />
<link rel="apple-touch-icon" sizes="180x180" href="/favicons/apple-touch-icon.png" />
<link rel="manifest" href="/favicons/site.webmanifest" />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalUrl} />

<!-- SEO -->
<meta name="robots" content="index, follow" />
<meta name="theme-color" content="#ffffff" />

<!-- Fonts and Styles -->
<link rel="preconnect" href="https://rsms.me/" />
<link rel="stylesheet" href="https://rsms.me/inter/inter.css" />
<link href="https://api.fontshare.com/v2/css?f[]=jet-brains-mono@1,2&display=swap" rel="stylesheet" />
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link href="https://fonts.googleapis.com/css2?family=Gilda+Display&display=swap" rel="stylesheet" />

<!-- Splide Slider -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.0.7/dist/css/splide.min.css" />
<script defer src="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.0.7/dist/js/splide.min.js"></script>

<!-- Alpine.js -->
<script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
